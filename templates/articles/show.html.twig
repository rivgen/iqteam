{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>TextPreview</th>
                <td>{{ article.textPreview }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ article.alias }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ article.created ? article.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ article.updated ? article.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ article.author }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('articles_index') }}">back to list</a>

    <a href="{{ path('articles_edit', {'id': article.id}) }}">edit</a>

    {{ include('articles/_delete_form.html.twig') }}
{% endblock %}
